.chat-main
  .chat-main__header
    .chat-main__header__left-box
      .present-group<>
        = @group.name
        %ul.member-list<>
          Member :
          - @group.users.each do |user|
            %li.member<>
              = user.name

            
    .edit-btn<>
      = link_to edit_group_path(@group), class: "edit" do
        Edit

  .chat-main__messages
    = render @messages 
    
  .chat-main__form
    .form
      = form_for [@group, @message] do |f|
        .input-box
          = f.text_field :body, class: "input-box__text", placeholder: "type a message"
          .input-box__image
            = f.label :image, class: "input-box__image" do
              = icon('fas', 'image')
            = f.file_field :image, class: "input-box__file"
        =f.submit 'Send', class: "submit-btn", value: "Send"