.chat-main
  .chat-main__header
    .chat-main__header__left-box
      .present-group<>
        グループ名
        .member-list<>
          Member : JUN
    .edit-btn<>
      = link_to "#", class: "edit" do
        Edit

  .chat-main__messages
    .message
      .user-info
        %p.user-name<>
          JUN
        %p.post-time<>
          2020-04-21 20:20
      %p.message-text<>
        新着メッセージ

  .chat-main__form
    .form
      = form_for [@group, @message] do |f|
        .input-box
          = f.text_field :body, class: "input-box__text", placeholder: "type a message"
          .input-box__image
            = f.label :image do
              = icon('fas', 'image')
            = f.file_field :image, class: "input-box__file"
        =f.submit 'Send', class: "submit-btn", value: "Send"